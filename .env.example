PORT=3000

# Stripe Mode: false = test mode, true = live mode
STRIPE_LIVE_MODE=false

# Stripe TEST Keys (for development)
STRIPE_TEST_SECRET_KEY=sk_test_your_test_secret_key_here
STRIPE_TEST_PUBLISHABLE_KEY=pk_test_your_test_publishable_key_here
STRIPE_TEST_WEBHOOK_SECRET=whsec_your_test_webhook_secret_here

# Stripe LIVE Keys (for production - NEVER commit real keys!)
STRIPE_LIVE_SECRET_KEY=sk_live_your_live_secret_key_here
STRIPE_LIVE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key_here
STRIPE_LIVE_WEBHOOK_SECRET=whsec_your_live_webhook_secret_here

# Pricing Configuration (in cents: 499 = 4.99, 999 = 9.99)
PRICE_ONETIME_EUR=499
PRICE_ONETIME_USD=499
PRICE_SUBSCRIPTION_EUR=999
PRICE_SUBSCRIPTION_USD=999

# Gmail (for payment notifications)
GMAIL_APP_PASSWORD=your_gmail_app_password_here

# Zoho Invoice Configuration
ZOHO_CLIENT_ID=your_zoho_client_id_here
ZOHO_CLIENT_SECRET=your_zoho_client_secret_here
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token_here
ZOHO_VIRTUAL_CUSTOMER_ID=your_zoho_virtual_customer_id_here

# Analytics Dashboard (DSGVO-konform, keine Cookies)
# Login: /admin/stats
STATS_PASSWORD=your_secure_password_here
